# Production Environment Variables Template
# Copy this file to .env.production and update with your actual values

# ================================
# DATABASE CONFIGURATION
# ================================
POSTGRES_USER=partman_prod
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD
POSTGRES_DB=partman_prod
POSTGRES_PORT=5433

# Database URL (used by API)
DATABASE_URL=postgresql://partman_prod:CHANGE_THIS_TO_A_STRONG_PASSWORD@localhost:5433/partman_prod

# ================================
# API CONFIGURATION
# ================================
API_PORT=3001
NODE_ENV=production

# JWT Configuration (CRITICAL: Change these in production!)
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRY=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# ================================
# WEB CONFIGURATION
# ================================
WEB_PORT=3000
VITE_API_URL=http://localhost:3001

# ================================
# SECURITY SETTINGS
# ================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=CHANGE_THIS_TO_ANOTHER_LONG_RANDOM_STRING

# ================================
# LOGGING
# ================================
LOG_LEVEL=info
LOG_FORMAT=json

# ================================
# FEATURE FLAGS
# ================================
ENABLE_SWAGGER=false
ENABLE_DEBUG_LOGS=false
